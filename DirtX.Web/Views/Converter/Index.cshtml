<h1>Unit Converter</h1>

<form asp-controller="Converter" asp-action="Convert" method="post">
    <div class="form-group">
        <label for="conversionType">Select conversion type:</label>
        <select class="form-control" id="conversionType" name="conversionType">
            <option value="1">Length (Inches to Centimeters)</option>
            <option value="2">Length (Centimeters to Inches)</option>
            <option value="3">Mass (Pounds to Kilograms)</option>
            <option value="4">Mass (Kilograms to Pounds)</option>
        </select>
    </div>
    <div class="form-group">
        <label for="inputValue">Enter value to convert:</label>
        <input type="number" class="form-control" id="inputValue" name="inputValue" required>
    </div>
    <button type="submit" class="btn btn-primary">Convert</button>
</form>

@if (ViewBag.Result != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(ViewBag.Result)
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
