@model OilBrandViewModel

<style>
    .brand-container {
        display: flex;
        align-items: flex-start;
    }

    .brand-image {
        border: 1px solid #ccc;
        width: 150px;
        height: 150px;
        margin-right: 20px;
    }

    .brand-details {
        flex: 1;
    }

    .oils-container {
        display: flex;
        flex-wrap: wrap;
    }

    .oil {
        width: calc(33.33% - 20px);
        margin-right: 20px;
        margin-bottom: 20px;
    }
</style>

<div class="brand-container">
    <div class="brand-image">
        <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 150px; height: 150px; border: solid 1px black" />
    </div>
    <div class="brand-details">
        <h4>@Model.Name</h4>
        <p>@Model.Description</p>
    </div>
</div>

<hr />

@*TODO - SECTIONS?*@

<h1>Products from this manufacturer:</h1>

<div class="oils-container">
    @foreach (var oil in Model.Oils)
    {
        <div class="oil">
            <h2>@oil.Title</h2>
            <p>@oil.Description</p>
            <p>Price: @oil.Price</p>
            <a href="@Url.Action("Details", "Oil", new { id = oil.Id })">View Details</a>
        </div>
    }
</div>