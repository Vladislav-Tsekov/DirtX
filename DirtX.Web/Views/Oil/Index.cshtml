@model List<ProductIndexViewModel>

<style>
    .category-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
    }

    .brands-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 5px;
    }

    .category-item {
        text-align: center;
        width: 200px;
        transition: background-size 0.3s, border-color 0.3s;
    }

    .brand-item {
        text-align: center;
        transition: background-size 0.3s, border-color 0.3s;
    }

    .category-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border: 2px solid #00008B;
        transition: border-color 0.3s;
    }

    .brand-image {
        width: 100px;
        height: 100px;
        overflow: hidden;
        border: 1px solid #00008B;
        transition: border-color 0.3s;
    }

    .category-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .brand-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .category-title {
        margin-top: 5px;
        font-weight: bold;
    }

    .brand-title {
        margin-top: 5px;
        font-weight: bold;
    }

    .category-item a {
        color: #00008B;
        transition: color 0.3s; 
        text-decoration: none;
    }

    .brand-item a {
        color: #00008B;
        transition: color 0.3s;
        text-decoration: none;
    }

    .category-item:hover .category-image {
        border-color: #FFA500; 
    }

    .category-item:hover a {
        color: #FFA500; 
    }

    .brand-item:hover .brand-image {
        border-color: #FFA500;
        transform: scale(1.1);
        transition: transform 0.3s ease;
    }

    .brand-item:hover img {
        color: #FFA500;
    }

    .brands-list li, a {
        list-style: none;
    }

    .p{
        display:flex;
        text-align: center;
        justify-content: center;
        box-sizing:content-box;
    }

</style>

<div class="category-list">
    @foreach (var category in Model)
    {
        <div class="category-item">
            <a href="@Url.Action("Category", "Oil", new { type = category.CategoryName })">
                <div class="category-image">
                    <img src="@GetImageUrlForCategory(category.CategoryName)" alt="@category.CategoryName.Replace("_", " ")" />
                </div>
                <div class="category-title">
                    <span>@category.CategoryName.Replace("_", " ")</span>
                </div>
            </a>
        </div>
    }
</div>

<hr />

<p>Shop By Brands</p>

<div class="brands-list">
    @foreach (var brand in Model.SelectMany(c => c.Brands).Distinct())
    {
        <div class="brand-item">
            <a href="@Url.Action("Brand", "Oil", new { brandName = brand.Name })">
                <div class="brand-image">
                    <img src="@brand.ImageUrl" alt="@brand.Name" />
                </div>
            </a>
        </div>
    }
</div>

@{
    string GetImageUrlForCategory(string categoryName)
    {
        switch (categoryName)
        {
            case "Four_Stroke":
                return "https://i.ibb.co/56sGHHC/Oil-Motul-300-V-1-L.jpg";
            case "Two_Stroke":
                return "https://i.ibb.co/k58PBnC/Oil-Cross-Power-2-T.jpg";
            case "Transmission":
                return "https://i.ibb.co/zntBCFg/Oil-Transmission-Motul.jpg";
            case "Suspension":
                return "https://i.ibb.co/xH81L67/Oil-Bel-Ray-Fork-5-W.jpg";
            case "Coolant":
                return "https://i.ibb.co/DRWKczb/Oil-Motul-Antifreeze.jpg";
            default:
                return "";
        }
    }
}
