@model ProductCategoryViewModel<Part>

<h1>@Model.CategoryName</h1>

@foreach (var part in Model.Products)
{
    <div>
        <h2>@part.Title</h2>
        <p>@part.Description</p>
        <p>Price: @part.Price</p>
        <a href="@Url.Action("Details", "Part", new { id = part.Id })">View Details</a>
    </div>
}