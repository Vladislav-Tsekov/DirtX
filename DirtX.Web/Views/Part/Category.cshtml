@using DirtX.Models

@model PartIndexViewModel

<h1>@Model.CategoryName</h1>

@foreach (var part in Model.Parts)
{
    <div>
        <h2>@part.Title</h2>
        <p>@part.Description</p>
        <p>Price: @part.Price</p>
        <a href="@Url.Action("Details", "Parts", new { id = part.Id })">View Details</a>
    </div>
}