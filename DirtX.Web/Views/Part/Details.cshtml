@model ProductDetailsViewModel

<div class="custom-container">
    <h3 class="custom-heading">PART DETAILS</h3>

    <div class="product-details">
        <div class="image-container">
            <img src="@Model.ImageUrl" alt="Product Image" class="custom-img" />
        </div>

        <div class="details-container">
            <div class="brand-title-container">
                <h4 class="custom-title">@Model.BrandName - @Model.Title</h4>
            </div>

            <div class="description-container">
                <p class="custom-title">@Model.Description</p>
            </div>

            @if (Model.Specs.Any())
            {
                <div class="custom-specs">
                    <h4 class="custom-title">Specifications:</h4>
                    @foreach (var spec in Model.Specs)
                    {
                        <div class="custom-spec">
                            <p><strong>@spec.Specification.Title.Title:</strong> @spec.Specification.Value</p>
                        </div>
                    }
                </div>
            }

            <div class="price-container">
                <div class="custom-price">
                    Price: $@Model.Price
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-body {
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .custom-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .custom-heading {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .custom-title {
        color: #555;
        margin-bottom: 10px;
    }

    .custom-img {
        display: block;
        margin: 0 auto;
        margin-top: 20px;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        max-width: 100%;
        height: auto;
        max-height: 350px;
    }

    .custom-price {
        text-align: center;
        font-size: 24px;
        color: #007bff;
        margin-top: 20px;
    }

    .custom-specs {
        background-color: #f9f9f9;
        padding: 10px;
        border-radius: 8px;
        margin-top: 20px;
    }

    .custom-spec {
        margin-bottom: 5px;
    }

    .custom-spec p {
        margin: 0;
        color: #666;
    }

    .product-details {
        display: flex;
    }

    .image-container {
        flex: 0 0 auto;
        margin-right: 20px;
    }

    .details-container {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .brand-title-container,
    .description-container,
    .custom-specs,
    .price-container {
        margin-bottom: 10px;
</style>