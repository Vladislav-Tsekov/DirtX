@using DirtX.Models

@model List<PartsCategoryViewModel>

<style>
    .category-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .category-item {
        text-align: center;
        width: 200px;
        transition: background-size 0.3s, border-color 0.3s;
    }

    .category-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border: 2px solid #00008B;
        transition: border-color 0.3s;
    }

    .category-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .category-title {
        margin-top: 5px;
        font-weight: bold;
    }

    .category-item a {
        color: #00008B;
        transition: color 0.3s; 
        text-decoration: none;
    }

    .category-item:hover .category-image {
        border-color: #FFA500; 
    }

    .category-item:hover a {
        color: #FFA500; 
    }

    .brands-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; 
        text-decoration: none;
        justify-content: center;

    }

    .brands-list li, a {
        list-style: none;
        text-decoration: none;
    }

</style>

<div class="category-list">
    @foreach (var category in Model)
    {
        <div class="category-item">
            <a href="@Url.Action("Category", "Part", new { type = category.CategoryName })">
                <div class="category-image">
                    <img src="@category.ImageUrl" alt="@category.CategoryName" />
                </div>
                <div class="category-title">
                    <span>@category.CategoryName</span>
                </div>
            </a>
        </div>
    }
</div>

<hr />

<ul class="brands-list">
    @foreach (var brand in Model.SelectMany(c => c.Brands).Distinct())
    {
        <li>
            <a href="@Url.Action("Index", "Part", new { brandName = brand.Name })">@brand.Name</a>
        </li>
    }
</ul>