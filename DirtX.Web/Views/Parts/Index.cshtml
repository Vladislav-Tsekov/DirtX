@using DirtX.Models

@model List<PartsCategoryViewModel>

<style>
    .h1 {
        justify-content:center;
    }
    .category-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .category-item {
        text-align: center;
        width: 200px;
    }

    .category-image {
        width: 100%;
        height: 150px;
        overflow: hidden;
        border: 1px solid #ccc;
    }

    .category-image img {
        width: 100%;
        height: auto;
    }

    .category-title {
        margin-top: 5px;
        font-weight: bold;
    }
</style>

<h1>Parts</h1>

<div class="category-list">
    @foreach (var category in Model)
    {
        <div class="category-item">
            <a href="@Url.Action("Category", "Parts", new { type = category.CategoryName })">
                <div class="category-image">
                    <img src="@category.ImageUrl" alt="@category.CategoryName" />
                </div>
                <div class="category-title">
                    <span>@category.CategoryName</span>
                </div>
            </a>
        </div>
    }
</div>