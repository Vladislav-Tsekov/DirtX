@model List<TrailerIndexViewModel>

<h1>Available Trailers</h1>

<div style="display: flex; flex-wrap: wrap;">
    @foreach (var trailer in Model)
    {
        <div style="border: 1px solid black; padding: 10px; margin: 10px; width: calc(33.33% - 20px);">
            <div style="position: relative; width: 100%; padding-top: 75%; /* 4:3 Aspect Ratio */ overflow: hidden; border: 1px solid black;">
                <img src="@trailer.ImageUrl" alt="Trailer Image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;" />
            </div>
            <div>
                <div style="font-weight: bold;">
                    @trailer.Title
                </div>
                <div>
                    Capacity: @trailer.Capacity
                </div>
                <div>
                    Maximum Load: @trailer.MaximumLoad
                </div>
                <div>
                    Cost Per Day: $@trailer.CostPerDay
                </div>
                <div style="margin-top: 10px;">
                    <form asp-controller="Trailer" asp-action="Availability" method="get">
                        <input type="hidden" name="trailerId" value="@trailer.Id" />
                        <button type="submit" style="font-weight: bold;">Check Availability</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>