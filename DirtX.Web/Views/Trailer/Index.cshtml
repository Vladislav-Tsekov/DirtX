@model List<TrailerIndexViewModel>

<h1>Available Trailers</h1>

@foreach (var trailer in Model)
{
    <div>
        <img src="@trailer.ImageUrl" alt="Trailer Image" />
        <p>Capacity: @trailer.Capacity</p>
        <p>Maximum Load: @trailer.MaximumLoad</p>
        <p>Cost Per Day: $@trailer.CostPerDay</p>
        <form asp-controller="Trailer" asp-action="CheckAvailability" method="post">
            <input type="hidden" name="trailerId" value="@trailer.Id" />
            <button type="submit">Check Availability</button>
        </form>
    </div>
}
