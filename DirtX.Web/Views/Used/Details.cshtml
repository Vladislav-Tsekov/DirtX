@model UsedMotoViewModel

@{
    ViewData["Title"] = "Motorcycle Details";
}

<h1>@Model.Make @Model.Model (@Model.Year)</h1>

<div>
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Motorcycle Image" style="max-width: 100%;" />
</div>

<div>
    <h2>Details</h2>
    <p><strong>Make:</strong> @Model.Make</p>
    <p><strong>Model:</strong> @Model.Model</p>
    <p><strong>Displacement:</strong> @Model.Displacement</p>
    <p><strong>Year:</strong> @Model.Year</p>
    <p><strong>Location:</strong> @Model.Province.Replace("_", " ")</p>
    <p><strong>Price:</strong> @Model.Price</p>
</div>

<div>
    <h2>Description</h2>
    <p>@Model.Description</p>
</div>

<div>
    <h2>Contact Information</h2>
    <p>@Model.Contact</p>
</div>

<div>
    <a href="@Url.Action("Index", "Home")">Back to Home</a>
</div>
